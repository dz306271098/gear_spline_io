<?xml version="1.0"?>
<launch>
    <!-- Gear-Spline LIO Launch File for Livox LiDAR -->
    <!-- Milestone 1: Uniform B-spline with dt=0.05s (NORMAL mode) -->

    <!-- Config file -->
    <arg name="config_file" default="$(find gear_spline_lio)/config/lio_livox.yaml"/>

    <!-- RViz visualization -->
    <arg name="rviz" default="true"/>

    <!-- Gear-Spline LIO Node -->
    <node pkg="gear_spline_lio" type="gear_spline_lio_node" name="gear_spline_lio_node" output="screen">
        <rosparam command="load" file="$(arg config_file)"/>
    </node>

    <!-- RViz (optional) -->
    <node if="$(arg rviz)" pkg="rviz" type="rviz" name="rviz"
          args="-d $(find gear_spline_lio)/config/lio.rviz"/>
</launch>
